{
    "version": 2,
    "name": "leerob",
    "alias": ["leerob.io", "www.leerob.io"],
    "builds": [
        {
            "src": "package.json",
            "use": "@now/next"
        }
    ],
    "build": {
        "env": {
            "MAILCHIMP_LIST_ID": "@mailchimp-list-id",
            "MAILCHIMP_API_KEY": "@mailchimp-api-key"
        }
    },
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1",
            "headers": {"cache-control": "public,max-age=31536000,immutable"}
        },
        {
            "src": "/(.*\\.(js|jpg|json|css|ico|png)$)",
            "dest": "/$1",
            "headers": {"cache-control": "public,max-age=31536000,immutable"}
        },
        {
            "src": "/LeeRobinson.pdf",
            "status": 301,
            "headers": {"Location": "https://leerob.io/robinson-resume-2019.pdf"}
        }
    ]
}
