{
    "name": "leerob.io",
    "description": "My personal website.",
    "version": "0.0.0",
    "author": {
        "name": "Lee Robinson",
        "email": "me@leerob.io",
        "url": "https://leerob.io"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/leerob/leerob.io.git"
    },
    "engines": {
        "node": "12.13.1",
        "yarn": ">=1.10.0"
    },
    "files": [
        "components",
        "data",
        "icons",
        "lib",
        "pages",
        "public",
        "styles",
        "utils"
    ],
    "scripts": {
        "build": "next build",
        "dev": "next",
        "imageoptim": "yarn imageoptim:gif && yarn imageoptim:jpg && yarn imageoptim:png",
        "imageoptim:gif": "imageoptim \"public/**/*.gif\"",
        "imageoptim:jpg": "imageoptim \"public/**/*.jpg\"",
        "imageoptim:png": "imageoptim --no-imageoptim --imagealpha \"public/**/*.png\"",
        "lint": "eslint . --ext .json --ext .js",
        "prettier": "prettier --write \"**/*.{html,js,json,md,mdx,mjs,yml}\"",
        "start": "next start",
        "test": "yarn lint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{html,js,json,md,mdx,mjs,yml}": [
            "prettier --write",
            "git add"
        ],
        "*.gif": [
            "imageoptim",
            "git add"
        ],
        "*.jpg": [
            "imageoptim",
            "git add"
        ],
        "*.png": [
            "imageoptim --no-imageoptim --imagealpha",
            "git add"
        ]
    },
    "dependencies": {
        "@mapbox/rehype-prism": "0.4.0",
        "@mdx-js/mdx": "1.5.5",
        "@mdx-js/tag": "0.20.3",
        "comma-number": "2.0.1",
        "date-fns": "1.30.1",
        "firebase": "7.8.0",
        "firebase-admin": "8.9.2",
        "googleapis": "47.0.0",
        "isomorphic-unfetch": "3.0.0",
        "next": "9.2.1",
        "next-seo": "3.4.0",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "react-syntax-highlighter": "12.2.1",
        "react-tweet-embed": "1.2.2",
        "styled-components": "5.0.0",
        "styled-reset": "4.1.0",
        "swr": "0.1.16",
        "title": "3.4.1",
        "unsplash-js": "6.0.0",
        "use-dark-mode": "2.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.8.4",
        "@zeit/next-mdx": "1.2.0",
        "babel-plugin-inline-react-svg": "1.1.1",
        "babel-plugin-styled-components": "1.10.7",
        "eslint": "6.8.0",
        "eslint-config-get-off-my-lawn": "5.0.1",
        "globby": "11.0.0",
        "husky": "3.0.9",
        "imageoptim-cli": "3.0.2",
        "lint-staged": "9.4.2",
        "listr": "0.14.3",
        "prettier": "1.19.1"
    }
}
